
# Uncomment (remove #) and fill this in with your assembly that contains the contexts ([StorEvil.Context])
Assemblies: bin\Debug\StorEvilSpecs.dll

# storevil will search for story files under this directory that have the following extension:
Extensions: .feature

# this sets up the default format for output to use the
OutputFileFormat: spark

# This is another option for report file format:
# OutputFileFormat: xml

# This sets the spark template used to build the report
OutputFileTemplate: default.spark

# if you uncomment the next line, an html report will be created each time you run StorEvil:
OutputFile: storevil.output.html

# you can also specify this file destination on the command line to create the report: storevil -o storevil.output.html


